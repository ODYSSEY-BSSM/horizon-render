{
  "name": "@horizon/hooks",
  "version": "0.0.1",
  "description": "React hooks for Horizon Design System",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup index.ts --format cjs,esm --dts",
    "dev": "pnpm build --watch",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "react": "^18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.3.1"
  }
}
