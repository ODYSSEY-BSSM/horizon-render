{
  "name": "horizon-render",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && pnpm clean:repo",
    "clean:repo": "find . -name 'dist' -type d -exec rm -rf {} + && find . -name 'node_modules' -type d -exec rm -rf {} +",
    "verify": "turbo run lint typecheck test build",
    "editor": "pnpm --filter editor dev",
    "build-editor": "pnpm --filter editor build",
    "storybook": "pnpm --filter @horizon/storybook dev",
    "build-storybook": "pnpm --filter @horizon/ui --filter @horizon/tokens --filter @horizon/utils build && pnpm --filter @horizon/storybook build",
    "verify:legacy": "pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^2.1.4",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "lint-staged": "^16.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.3.5",
    "tailwindcss": "^3.4.13",
    "tsup": "^8.3.0",
    "turbo": "^2.5.7",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^2.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": ["biome check --write"]
  }
}
